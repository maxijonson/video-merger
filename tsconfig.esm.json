{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist/esm",
        "lib": ["ES2022"],
        "module": "ES2022",
        "moduleResolution": "Node",
        "target": "ES2022",
        "esModuleInterop": true
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
